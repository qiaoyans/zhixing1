var (
	status int //0 结束，1 未开始，2 执行中 3 自定义动画节点结束
)

func playAction() {
	stepTo -120, -80
}

func playEnd() {
	stepTo 0, -40
}

onStart => {
	status = 1
	Common.myreset this
}

onMsg "RedHood09Play", => {
	status = 2
	show

	playAction
	status = 3
}

onMsg "RedHood09End", => {
	playEnd

	hide
	status = 0
}
