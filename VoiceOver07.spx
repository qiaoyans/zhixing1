var (
	status int //0 结束，1 未开始，2 执行中 3 自定义动画节点结束
)

func playAction() {
	msg := "很久以前，狼族是森林的守护者，大家都很感谢他们。是魔王坏主意，让狼族朋友们分开了。"
	Common.mysay this, msg
}

func playEnd() {
}

onStart => {
	status = 1

	hide
	setSize 0.01
	setXYpos 300, -300
}

onMsg "VoiceOver07Play", => {
	status = 2
	show

	playAction
	status = 3
}

onMsg "VoiceOver07End", => {
	playEnd

	hide
	status = 0
}
