var (
	status int //0 结束，1 未开始，2 执行中 3 自定义动画节点结束
)

func playAction() {
	stepTo -140, -130
	wait 0.1
	Common.mysay this, "（眼神坚定地看着小红帽）我们一起去找魔王，把和平带回森林吧！"
}

func playEnd() {
	stepTo 250, -130
}

onStart => {
	status = 1
	Common.myreset this
}

onMsg "Wolf07Play", => {
	status = 2
	show

	playAction
	status = 3
}

onMsg "Wolf07End", => {
	playEnd

	hide
	status = 0
}
