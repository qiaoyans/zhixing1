var (
	status int //0 结束，1 未开始，2 执行中 3 自定义动画节点结束
)

func playAction() {
	stepTo -180, -80
}

func playEnd() {
	stepTo -60, -40
}

onStart => {
	status = 1
	Common.myreset this
}

onMsg "Wolf09Play", => {
	status = 2
	show

	playAction
	status = 3
}

onMsg "Wolf09End", => {
	playEnd

	hide
	status = 0
}
